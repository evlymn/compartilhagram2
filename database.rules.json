{
  "rules": {
    "translate": {
      ".read": "true",
      ".write": "auth!=null",
    },
    ".read": "auth!=null",
    ".write": "auth!=null",
    "alerts": {
      "$uid": {
        "list": {
          ".indexOn": [
            "counted",
            "postId"
          ]
        }
      }
    },
    "timeline": {
      "messages": {
        ".indexOn": "displayNameSearch",
      },
      "follow": {
        "messages": {
          "$uid": {
            ".indexOn": "uid",
          }
        }
      }

    },
    "groups": {
      "list": {
        ".indexOn": [
          "uid",
          "public"
        ]
      }
    }
  }
}
